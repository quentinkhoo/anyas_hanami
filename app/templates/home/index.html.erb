<%# app/templates/web/home/index.html.erb %>

<div class="container">
  <div class="anya-study-image">
    <img src="<%= assets['anya1.jpg'].url %>" alt="Anya Forger studying with great effort">
  </div>

  <h1>Anya's Math Mission</h1>
  <p>
    Anya needs to get Stella Stars! Help her by solving a math problem. <br>
    For example: <code>5 * 8</code> or <code>(100 + 20) / 2</code>
  </p>

  <form action="/" method="POST">
    <div>
      <label for="user_input">Anya's Problem:</label>
      <input
        type="text"
        id="user_input"
        name="user_input"
        value="<%= user_input %>"
        placeholder="e.g., 2 + 2"
        autofocus
      >
    </div>

    <button type="submit">Help Anya Calculate!</button>

    <div>
      <label for="output">The Answer Is...</label>
      <textarea
        id="output"
        readonly
        rows="3"
      ><%= output %></textarea>
    </div>
  </form>
</div>